@model IEnumerable<VMS_homework.Models.OppTable>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Opportunity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OpportunityStartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OpportunityStopDate)
        </th>
