@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Opportunity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OpportunityStartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OpportunityStopDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OpportunityLastComp)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OpportunityCenter)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
