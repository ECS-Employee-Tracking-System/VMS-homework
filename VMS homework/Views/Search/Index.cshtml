@model IEnumerable<VMS_homework.Models.volunteer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Last Name Search</h2>

@using (Html.BeginForm("Index", "Search", FormMethod.Get))
{
    @Html.TextBox("searching")
    <input type="submit" value="submit"/>
}
@if (Model.Count() > 0)
{
<table>
    <tr>
        <th>FirstName</th> <th>LastName</th> <th>ApprovalStatus</th>
    </tr>
@foreach (var item in Model)
{
<tr>
    <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
    <td>@Html.DisplayFor(modelItem => item.LastName)</td>
    <td>@Html.DisplayFor(modelItem => item.ApprovalStatus)</td>
  <td> @Html.ActionLink("Edit", "Edit", "volunteers", new { id = item.UserName }, null)</td>
</tr>
   

}

</table>
}
else
{
<h2>No volunteers matched the search criteria</h2>
}